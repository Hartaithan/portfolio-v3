{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier",
    "alloy",
    "alloy/react",
    "alloy/typescript"
  ],
  "plugins": ["prettier"],
  "rules": {
    "no-console": ["error", { "allow": ["info", "error", "warn"] }],
    "prettier/prettier": ["error"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["^@/"]
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["./*", "../*"]
      }
    ]
  }
}
